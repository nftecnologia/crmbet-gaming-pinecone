# CRM Inteligente - Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
VERSION=1.0.0
BUILD_DATE=2024-01-15T10:00:00Z

# Database Configuration (PostgreSQL)
DB_USER=crmbet_user
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DB_HOST=postgres
DB_PORT=5432
DB_NAME=crmbet
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# RabbitMQ Configuration
RABBITMQ_USER=crmbet_user
RABBITMQ_PASSWORD=CHANGE_ME_RABBITMQ_PASSWORD
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_VHOST=crmbet_vhost
RABBITMQ_ERLANG_COOKIE=CHANGE_ME_ERLANG_COOKIE
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@${RABBITMQ_HOST}:${RABBITMQ_PORT}/${RABBITMQ_VHOST}

# Security Configuration
JWT_SECRET=CHANGE_ME_JWT_SECRET_KEY_MINIMUM_32_CHARACTERS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# External API Configuration
SMARTICO_API_URL=https://api.smartico.com
SMARTICO_API_KEY=CHANGE_ME_SMARTICO_API_KEY

# Email Service Configuration
SENDGRID_API_KEY=CHANGE_ME_SENDGRID_API_KEY
EMAIL_FROM=noreply@crmbet.com

# SMS Service Configuration
TWILIO_ACCOUNT_SID=CHANGE_ME_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=CHANGE_ME_TWILIO_AUTH_TOKEN

# AWS Configuration
AWS_ACCESS_KEY_ID=CHANGE_ME_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_AWS_SECRET_KEY
AWS_REGION=us-east-1
DATA_LAKE_URL=s3://crmbet-datalake
S3_BUCKET=crmbet-production

# ML Service Configuration
ML_BATCH_SIZE=1000
ML_WORKERS=4

# ETL Service Configuration
ETL_BATCH_SIZE=5000

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD
GRAFANA_SECRET_KEY=CHANGE_ME_GRAFANA_SECRET_KEY

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl
SSL_KEY_PATH=/etc/nginx/ssl

# CDN Configuration
CDN_URL=https://cdn.crmbet.com

# CORS Configuration
CORS_ORIGIN=https://app.crmbet.com,https://admin.crmbet.com

# Deployment Configuration
DEPLOY_ENV=production
DEPLOY_REGION=us-east-1
DEPLOY_CLUSTER=crmbet-production

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=crmbet-backups

# Security Headers
HELMET_CSP_ENABLED=true
HSTS_MAX_AGE=31536000

# Performance Configuration
CLUSTER_WORKERS=auto
MEMORY_LIMIT=2g
CPU_LIMIT=2.0

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30000
HEALTH_CHECK_INTERVAL=30000

# Feature Flags
FEATURE_ML_PREDICTIONS=true
FEATURE_REAL_TIME_CLUSTERING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_A_B_TESTING=true

# Cache Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# Session Configuration
SESSION_TIMEOUT=1800
SESSION_CLEANUP_INTERVAL=300

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000